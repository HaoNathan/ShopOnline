
@model ShopOnline.Dto.AdminDto

@section Css
   {
    <link rel="stylesheet" href="~/Areas/Admin/Asset/css/font.css">
    <link rel="stylesheet" href="~/Areas/Admin/Asset/css/xadmin.css">

    <script type="text/javascript" src="~/Areas/Admin/Asset/js/xadmin.js"></script>
}


<div class="layui-fluid">
    <div class="layui-row">
        <form class="layui-form">
            <div class="layui-form-item">
                <label for="L_pass" class="layui-form-label">
                    <span class="x-red">*</span>头像
                </label>
                <div class="layui-input-inline">
                    <img src="@Model.ImagePath" id="displayImg" alt="Alternate Text" width="50%"/>
                    <button type="button" class="layui-btn" id="UploadImage">
                        <i class="layui-icon">&#xe67c;</i>上传图片
                    </button>
                </div>
                <div class="layui-form-mid layui-word-aux">
                    6到16个字符
                </div>
            </div>
            <div class="layui-form-item">
                @Html.HiddenFor(m => m.Id)
                @Html.Hidden("imageUrl")
                <label for="username" class="layui-form-label">
                    <span class="x-red">*</span>登录名
                </label>
                <div class="layui-input-inline">
                    <input type="text" id="username" value="@Model.AdminName" name="AdminName" required="" lay-verify="required"
                           autocomplete="off" class="layui-input">
                </div>
                <div class="layui-form-mid layui-word-aux">
                    <span class="x-red">*</span>将会成为您唯一的登入名
                </div>
            </div>
            <div class="layui-form-item layui-col-xs7">
                <label class="layui-form-label "><span class="x-red">*</span>角色</label>
                <div class="layui-input-block ">
                    <select name="RolesId" lay-filter="aihao" disabled="disabled">
                        @foreach (var item in (SelectList)ViewBag.RolesList)
                        {
                            if (item.Value.ToString().Equals(@Model.RolesId))
                            {
                                <option value="@item.Value" selected="">@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value" >@item.Text</option>
                            }
                        }
                    </select>
                   
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_pass" class="layui-form-label">

                    <span class="x-red">*</span>密码
                </label>
                <div class="layui-input-inline">
                    <input type="password" id="L_pass" value="@Model.AdminPassword" name="AdminPassword" required="" lay-verify="pass"
                           autocomplete="off" class="layui-input">
                </div>
                
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                    <span class="x-red">*</span>确认密码
                </label>
                <div class="layui-input-inline">
                    <input type="password"  name="repass" required="" lay-verify="repass"
                           autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="L_repass" class="layui-form-label">
                </label>
                <button class="layui-btn" lay-filter="add" lay-submit="">
                    修改
                </button>
            </div>
        </form>
    </div>
</div>
@section js
{
    <script>
        layui.use(['form', 'layer', 'upload'],
            function() {
                $ = layui.jquery;
                var form = layui.form;
                var layer = layui.layer;
                var upload = layui.upload;

                //自定义验证规则
                form.verify({
                    nikename: function(value) {
                        if (value.length < 5) {
                            return '昵称至少得5个字符啊';
                        }
                    },
                    pass: [/(.+){6,12}$/, '密码必须6到12位'],
                    repass: function(value) {
                        if ($('#L_pass').val() !== $('#L_repass').val()) {
                            return '两次密码不一致';
                        }
                    }
                });
                upload.render({
                    elem: '#UploadImage',
                    url: '@Url.Action("UploadImage", "User")', //必填项
                    field: 'file',
                    done: function(res) {
                        //如果上传失败
                        if (res.code !== 0) {
                            return layer.msg(res.Info);
                        } else {
                            $("#displayImg").attr("src", res.data);
                            layer.msg(res.Info);
                            $("#imageUrl").val(res.data);
                        };
                    }
                });
                //监听提交
                form.on('submit(add)',
                    function(data) {
                        console.log(data);
                        //发异步,
                        $.post("@Url.Action("UpdateAdmin", "Admin")",
                            data.field,
                            function(res) {
                                layer.alert(res.Info + "(请重新登录刷新)",
                                    {
                                        icon: 6
                                    },
                                    function() {
                                        //关闭当前frame
                                        xadmin.close();
                                        // 可以对父窗口进行刷新
                                        xadmin.father_reload();
                                    });
                            });

                        return false;
                    });

            });
    </script>

}

