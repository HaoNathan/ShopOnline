@section Css
{
    <link rel="stylesheet" href="~/Areas/Admin/Asset/css/font.css">
    <link rel="stylesheet" href="~/Areas/Admin/Asset/css/login.css">
    <link rel="stylesheet" href="~/Areas/Admin/Asset/css/xadmin.css">
    <script type="text/javascript" src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
}
<body class="login-bg">
    <div class="login layui-anim layui-anim-up">
        <div class="message">x-admin2.0-管理登录</div>
        <div id="darkbannerwrap"></div>

        <form method="post" class="layui-form">
            <input name="AdminName" placeholder="用户名" type="text" lay-verify="required" class="layui-input">
            <hr class="hr15">
            <input name="AdminPassword" lay-verify="required" placeholder="密码" type="password" class="layui-input">
            <hr class="hr15">
            <input value="登录" lay-submit lay-filter="login" style="width:100%;" type="submit">
            <hr class="hr20">
        </form>
    </div>
</body>
@section js
{
    <script>
    $(function() {
        layui.use([
                'form',
                'jquery', 'layer'
            ],
            function() {
                var form = layui.form;
                $ = layui.$;
                var layer = layui.layer;
                form.on('submit(login)',
                    function(data) {
                        //ajax
                        $.post("@Url.Action("Login","AdminLogin")",
                            data.field,
                            function (res) {
                                layer.msg(res.Info);
                                if (res.IsSuccess) {
                                    location.href="@Url.Action("MainBoard","AdminMainBoard")";
                                }
                            });

                        return false;
                    });
            });
    })
    </script>
}
<!-- 底部结束 -->
